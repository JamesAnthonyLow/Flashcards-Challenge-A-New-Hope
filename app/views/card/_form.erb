<div class="container">

  	<h4>Card #<%= "#{index + 1}" %>:</h4>
  <label for="question">Question:</label>
  <input style="border: solid" class="input" name="cards[<%= card_id %>[question]]" type="text" value="<%= card.question %>"  />
  <label for="answer">Answer:</label>
  <input style="border: solid" class="input" name="cards[<%= card_id %>[answer]]" type="text" value="<%= card.answer %>" />
</div>

