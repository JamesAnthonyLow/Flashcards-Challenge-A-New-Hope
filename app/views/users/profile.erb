<body class="game">
  <article>
    <h2><%= current_user.username %></h2>
    <% if current_user.avatar_src == "" %>
      <p><img class="profile_img" src="http://i.imgur.com/5hbud8l.png?1"></p>
    <% else %>
      <p><img class="profile_img" src="<%= current_user.avatar_src %>"></p>
    <% end %>
    Email: <%= current_user.email %>
    <% if current_user.games %>
      <p>You currently haven't played any games!<br>
        Check out the list of <a href="/">decks</a> to play.</p>
    <% else %>
      <% current_user.games do |game|%>
        <%= game %><br>
      <% end %>
    <% end %>
  </article>
</body>