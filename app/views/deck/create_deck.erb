<div class="container">
<form action="/deck/<%= @deck.id %>" method="POST">
  <label for="deck_name">Name:</label>
  <input class="input" name="deck[name]" type="text" value="<%= @deck.name %>" size="30" />
  <label for="deck_img">Image URL:</label>
  <input class="input" name="deck[deck_img]" type="text" value="<%= @deck.deck_img %>" size="30" />
	  <input type="submit" value="save"/>
</form>
<form action="/deck/<%= @deck.id %>/card/new" method="POST">
	  <% if @deck.valid? %>
	  <%= erb :"card/create_card", :locals => {cards: @deck.cards, add_card: @add_card} %>
	  <% end %>
	</form>
<form action="/deck/<%= @deck.id %>/complete" method="POST">
</form>
</div>


